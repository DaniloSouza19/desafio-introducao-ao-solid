{
  "openapi": "3.0.0",
  "info": {
    "title": "Gerenciamento de usuários",
    "description": "É uma api para gerenciamento de usuários",
    "version": "1.0.0"
  },
  "paths": {
    "/users": {
      "post": {
        "tags": ["User"],
        "summary": "Create an User",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "John Doe",
                  "email": "johndoe@example.com"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "created"
          },
          "400": {
            "description": "Email Already exists"
          }
        }
      },
      "get": {
        "tags": ["User"],
        "summary": "List All Users",
        "parameters": [
          {
            "in": "header",
            "description": "User Id as admin",
            "schema": {
              "type": "string"
            },
            "example": {
              "user_id": "f3a40985-892e-4dea-a9b3-aacd8ea7e8b4"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "admin": {
                        "type": "boolean"
                      },
                      "email": {
                        "type": "string"
                      },
                      "created_at": {
                        "type": "string"
                      },
                      "updated_at": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "User not found"
          }
        }
      }
    }
  }
}